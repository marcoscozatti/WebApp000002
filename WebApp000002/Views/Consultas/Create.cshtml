@model WebApp000002.Models.ConsultaModel

@{
    ViewData["Title"] = "Consultório Médico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Consulta Médica</h4>
<hr />
<div class="row"> 
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label>ID Pacientes</label>
            <select name="idPaciente" class="form-control">
                @foreach (var item in Model.ListaPacientes)
                {
                    <option value="@item.IdPaciente">@item.Nome</option>
                }

             </select>
            <hr />

            <div class="form-group">
                <label asp-for="DataConsulta" class="control-label"></label>
                <input asp-for="DataConsulta" class="form-control" />
                <span asp-validation-for="DataConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeMedico" class="control-label"></label>
                <input asp-for="NomeMedico" class="form-control" />
                <span asp-validation-for="NomeMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FichaMedica" class="control-label"></label>
                <input asp-for="FichaMedica" class="form-control" />
                <span asp-validation-for="FichaMedica" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

         

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
